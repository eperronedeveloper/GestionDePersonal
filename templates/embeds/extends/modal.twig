{% block style %}
    <style>
        /* Modal Header */
        .modal-header {
            padding: 2px 16px;
            background-color: #5cb85c;
            color: white;
        }

        /* Modal Body */
        .modal-body {
            padding: 2px 16px;
        }


    </style>
{% endblock %}
{% block modalContainer %}
    <div class="modal-header modal-titulo">
        {% block modalHeader %}
            <span>{{ titulo_modal }}</span>
            <span class="close" onclick="cerrarModal()">&times;</span>
        {% endblock %}
    </div>
    <div class="modal-body mb-5">
        {% block modalBody %}{% endblock %}
    </div>
    <div class="modal-footer mt-5">
        {% block modalFooter %}{% endblock %}
    </div>
{% endblock %}
{% block script %}{% endblock %}
